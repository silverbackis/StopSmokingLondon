{% extends '@App/base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets 
    '@SimpleUserBundle/Resources/assets/scss/forms.scss'
    filter='?uglifycss'
     %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block page_content %}
    {{ parent() }}
    <div class="container mt-4">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-signin">
            <h2 class="form-signin-heading">Forgot password?</h2>
            <div class="form-group">
                <label for="username" class="sr-only">{{ 'resetting.request.username'|trans }}</label>
                <input type="text" id="username" name="username" required="required" class="form-control" placeholder="{{ 'resetting.request.username'|trans }}" />
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'resetting.request.submit'|trans }}</button>
            </div>
            <div class="form-group">
                <a class="btn btn-lg btn-primary btn-block" href="{{ path('fos_user_security_login') }}">Back to Login</a>
            </div>
        </form>
    </div>
{% endblock %}