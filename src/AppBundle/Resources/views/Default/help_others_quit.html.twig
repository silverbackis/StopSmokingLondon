{% extends '@App/base.html.twig' %}
{% trans_default_domain "help_others_quit" %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets 
    '@AppBundle/Resources/assets/local/scss/help-others.scss'
    filter='?uglifycss'
     %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% javascripts
    '@AppBundle/Resources/assets/global/bower/clipboard/dist/clipboard.min.js'
    '@AppBundle/Resources/assets/local/js/help-others.js'
    filter='?uglifyjs2' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}

{% block page_content %}
  <div class="container-fluid h-100 container-lower">
    {% include '@App/Default/_header.html.twig' %}
    <div class="row block-text">
      <div class="col-12">
        <h3>Finding out if they want to quit</h3>
        <p>Some text</p>
        <h3>Providing advice</h3>
        <p>Some text</p>
      </div>
    </div>

    <div class="row justify-content-center mt-5">
      <div class="col-12">
        <div class="card card-outline-success text-center container-fluid mobile-w-100">
          <div class="card-block row justify-content-center">
            <div class="col-12 col-md-9">
              <h4>{{ 'share.title'|trans }}</h4>
              <p class="message">{{ 'share.text'|trans }}</p>

              <div class="social-links mb-3">
                <a class="btn btn-lg btn-success btn-cta website-link t" id="shareT" href="https://twitter.com/intent/tweet?text={{ 'share.social_post'|trans|url_encode }}">Twitter</a>
                <a class="btn btn-lg btn-success btn-cta website-link f" id="shareF" href="#">Facebook</a>
                <a class="btn btn-lg btn-success btn-cta website-link l" id="shareL" href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{ "https://www.stopsmokingportal.com"|url_encode }}&amp;title={{ "Stop Smoking London"|url_encode }}
&amp;summary={{ 'share.social_post'|trans|url_encode }}&amp;source={{ "Stop Smoking London Website"|url_encode }}" target="_blank">LinkedIn</a>
              </div>
              <div class="form-group has-success">
                <div class="input-group">
                  <input class="form-control form-control-lg" type="text" value="https://www.stopsmokingportal.com" id="shareLink" data-clipboard-target="#shareLink" />
                  {# <span class="input-group-btn">
                    <button class="btn btn-lg btn-success btn-cta" type="button" data-clipboard-target="#shareLink">Copy Link</button>
                  </span> #}
                </div>
                <span class="badge badge-pill" id="copySuccess">Copied to clipboard</span>
                <span class="badge badge-pill" id="copyError">Press 'ctrl/cmd + c' to copy</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {% include '@App/Default/_stop_smoking_london_info.html.twig' %}
  </div>
{% endblock %}